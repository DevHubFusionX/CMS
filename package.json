{
  "name": "server",
  "version": "1.0.0",
  "description": "Backend API for Content Management System",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "seed": "node utils/seeder.js",
    "seed:delete": "node utils/seeder.js -d",
    "seed:roles": "node seedRoles.js",
    "seed:site-roles": "node seedSiteRoles.js",
    "migrate:posts": "node migrations/addSiteToExistingPosts.js",
    "setup:multisite": "node setupMultiSite.js",
    "create:superadmin": "node createSuperAdmin.js",
    "migrate:site-schema": "node migrations/updateSiteSchema.js",
    "test": "jest --runInBand",
    "test:watch": "jest --watch --runInBand",
    "setup": "npm run seed:roles && npm run create:superadmin",
    "setup:full": "npm run seed:roles && npm run seed:site-roles && npm run create:superadmin && npm run setup:multisite",
    "setup:database": "node setupDatabase.js",
    "update:enhanced": "npm run migrate:site-schema && npm run setup:full"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "axios": "^1.10.0",
    "bcryptjs": "^3.0.2",
    "cloudinary": "^2.7.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "groq-sdk": "^0.29.0",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.17.0",
    "mongoose": "^8.16.4",
    "multer": "^2.0.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.10.1",
    "sanitize-html": "^2.17.0",
    "socket.io": "^4.7.5",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.1.3",
    "nodemon": "^3.1.10",
    "supertest": "^6.3.3"
  }
}
